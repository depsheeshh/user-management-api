# Gunakan base image PHP dengan Apache
FROM php:8.2-apache

# Instal ekstensi yang dibutuhkan Laravel
RUN apt-get update && apt-get install -y \
    libzip-dev \
    zip \
    unzip \
    libpq-dev \
    && docker-php-ext-install pdo pdo_mysql pdo_pgsql zip

# Instal Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Atur direktori kerja
WORKDIR /var/www/html

# Salin file proyek
COPY . .

# Instal dependensi Composer
RUN composer install --no-interaction --optimize-autoloader --no-dev

# Ubah kepemilikan file
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# Konfigurasi Apache
COPY 000-default.conf /etc/apache2/sites-available/000-default.conf
RUN a2enmod rewrite

# --- PERUBAHAN DIMULAI DI SINI ---

# Salin entrypoint script ke dalam container
COPY entrypoint.sh /usr/local/bin/entrypoint.sh

# Berikan izin eksekusi pada script tersebut
RUN chmod +x /usr/local/bin/entrypoint.sh

# Tetapkan entrypoint.sh sebagai perintah yang dijalankan saat container dimulai
ENTRYPOINT ["entrypoint.sh"]
